<div class="form-horizontal">

 <%= form_for @user do |f| %>


   <div class="form-group">
     <%= f.label :first_name, class: "col-md-2 control-label" %>
     <div class="col-md-6">
       <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
     </div>
   </div>

   <div class="form-group">
     <%= f.label :last_name, class: "col-md-2 control-label" %>
     <div class="col-md-6">
       <%= f.text_field :last_name, class: "col-md-5 form-control" %>
     </div>
   </div>

   <div class="form-group">
     <%= f.label :email, class: "col-md-2 control-label" %>
     <div class="col-md-6">
       <%= f.email_field :email, class: "col-md-5 form-control" %>
     </div>
   </div>

   <div class="form-group">
      <%= f.label :password, class: "col-md-2 control-label" %>
      <div class="col-md-6">
        <%= f.password_field :password, class: "col-md-5 form-control" %>
      </div>
   </div>

   <div class="form-group">
     <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
     <div class="col-md-6">
       <%= f.password_field :password_confirmation, class: "col-md-5 form-control" %>
     </div>
   </div>


   <% if current_user.admin %>
    <div class="form-group">
      <div class="col-md-10 col-md-offset-2">
        <%= f.check_box :admin %>
        <%= f.label :admin %>
      </div>
    </div>
   <% end %>

   <div class="form-group">
     <div class="col-md-offset-2 col-sm-6">
       <%= f.submit class: "btn btn-primary"%>
       <%= link_to "Cancel", users_path, class: "btn btn-default" %>
     </div>
   </div>
 <% end %>
</div>
